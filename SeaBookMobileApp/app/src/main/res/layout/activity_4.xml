        <Spinner
            android:layout_width="347dp"
            android:layout_height="53dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="30dp"
            android:popupBackground="#765AAF"
            android:id="@+id/spiiner"
